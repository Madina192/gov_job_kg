<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.resume.ResumeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создание резюме"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/mainColor"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/tv_name_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Фамилия и имя"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="14dp"
        />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@drawable/input_fields_background"
        android:hint="Введите ФИО"
        android:layout_marginTop="10dp"
        android:inputType="number|phone"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_lastname"
        android:imeOptions="actionNext"
        android:maxLength="9"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Дата рождения"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/etUserName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        />

    <EditText
        android:id="@+id/et_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@drawable/input_fields_background"
        android:hint="Введите дату рождения"
        android:layout_marginTop="10dp"
        android:inputType="number|phone"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_birthday"
        android:imeOptions="actionNext"
        android:maxLength="9"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/tv_job_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Должность"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_birthday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        />

    <EditText
        android:id="@+id/et_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@drawable/input_fields_background"
        android:hint="Введите должность"
        android:layout_marginTop="10dp"
        android:inputType="number|phone"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_job_title"
        android:imeOptions="actionNext"
        android:maxLength="9"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/tv_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Образование"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_job_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        />

    <EditText
        android:id="@+id/et_education"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@drawable/input_fields_background"
        android:hint="Введите учебное заведение"
        android:layout_marginTop="10dp"
        android:inputType="number|phone"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_education"
        android:imeOptions="actionNext"
        android:maxLength="9"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/tv_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Опыт работы"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_education"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        />

    <EditText
        android:id="@+id/et_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@drawable/input_fields_background"
        android:hint="Введите опыт работы"
        android:layout_marginTop="10dp"
        android:inputType="number|phone"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_experience"
        android:imeOptions="actionNext"
        android:maxLength="9"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Контакты"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_experience"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:background="@drawable/input_fields_background"
        android:hint="Введите номер телефона"
        android:layout_marginTop="10dp"
        android:inputType="number|phone"
        android:layout_marginHorizontal="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_phone"
        android:imeOptions="actionNext"
        android:maxLength="9"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintTextFieldSize" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="14dp"
        android:text="Готово"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_phone"
        android:layout_marginTop="40dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>