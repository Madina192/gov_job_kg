<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/Theme.GovJobKG.White"
    android:layout_height="match_parent">

    <include
        layout="@layout/layout_toolbar"
        android:id="@+id/toolbar"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                >

                <TextView
                    android:text="Учреждение"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/sectorDropDown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_fields_background"
                        android:layout_weight="1"
                        android:inputType="none"
                        android:popupBackground="@drawable/outlined_background"
                        android:text="Выберите учреждение"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:text="Должность"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="14dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <AutoCompleteTextView
                        android:id="@+id/jobsDropDown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_fields_background"
                        android:layout_weight="1"
                        android:popupBackground="@drawable/outlined_background"
                        android:inputType="none"
                        android:text="Выберите должность"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="Зарплата"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >
                    <EditText
                        android:id="@+id/etUserName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:importantForAutofill="no"
                        android:background="@drawable/input_fields_background"
                        android:hint="Введите сумму"
                        android:layout_marginTop="4dp"
                        android:inputType="number|phone"
                        android:layout_marginHorizontal="14dp"
                        app:layout_constraintTop_toBottomOf="@id/tvHeader"
                        android:imeOptions="actionNext"
                        android:padding="14dp"
                        android:layout_weight="10"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:ignore="VisualLintTextFieldSize" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        app:endIconMode="dropdown_menu"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <AutoCompleteTextView
                            android:id="@+id/currencyDropDown"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="20dp"
                            android:layout_marginEnd="14dp"
                            android:background="@drawable/input_fields_background"
                            android:popupBackground="@drawable/outlined_background"
                            android:inputType="none"
                            android:text="Валюта"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <TextView
                    android:text="Стаж работы"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etExperience"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:background="@drawable/input_fields_background"
                    android:hint="Требуемый стаж работы"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="14dp"
                    android:imeOptions="actionNext"
                    android:padding="14dp"
                    tools:ignore="VisualLintTextFieldSize" />

                <TextView
                    android:text="График "
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="14dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etWorkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:background="@drawable/input_fields_background"
                    android:hint="График работы"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="14dp"
                    android:imeOptions="actionNext"
                    android:padding="14dp"
                    tools:ignore="VisualLintTextFieldSize" />


                <TextView
                android:text="Описание"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="14dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no"
                    android:background="@drawable/input_fields_background"
                    android:hint="Введите подробное описание вакансии, включая основные обязанности, требования и условия работы"
                    android:layout_marginTop="4dp"
                    android:layout_marginHorizontal="14dp"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:padding="14dp"
                    android:minLines="4"
                    android:maxLines="100"
                    tools:ignore="VisualLintTextFieldSize" />

                <Button
                    android:id="@+id/btnAddVacancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="14dp"
                    android:text="Добавить вакансию"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    />
            </LinearLayout>




        </ScrollView>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>