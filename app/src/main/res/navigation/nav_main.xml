<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_mainj"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.govjobkg.ui.auth.AuthFragment"
        tools:layout="@layout/fragment_auth"
        android:label="AuthFragment" >

        <action
            android:id="@+id/action_authFragment_to_createNewVacancyFragment"
            app:destination="@id/createNewVacancyFragment" />
    </fragment>
    <fragment
        android:id="@+id/createNewVacancyFragment"
        android:name="com.example.govjobkg.ui.hr.CreateNewVacancyFragment"
        android:label="CreateNewVacancyFragment" >
        <action
            android:id="@+id/action_createNewVacancyFragment_to_applicationsFragment"
            app:destination="@id/applicationsFragment" />
    </fragment>
    <fragment
        android:id="@+id/applicationsFragment"
        android:name="com.example.govjobkg.ui.hr.ApplicationsFragment"
        android:label="ApplicationsFragment" />
    <fragment
        android:id="@+id/userMainFragment"
        android:name="com.example.govjobkg.ui.user.main.UserMainFragment"
        android:label="fragment_user_main"
        tools:layout="@layout/fragment_user_main" />
    <fragment
        android:id="@+id/vacanciesFragment"
        android:name="com.example.govjobkg.ui.user.vacancies.VacanciesFragment"
        android:label="fragment_vacancies"
        tools:layout="@layout/fragment_vacancies" />

</navigation>